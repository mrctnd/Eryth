@model Eryth.ViewModels.AlbumCreateViewModel

@{
    ViewData["Title"] = "Albüm Oluştur";
}

<div class="min-h-screen bg-black text-white">
    <!-- Hero Section -->
    <div class="relative overflow-hidden">
        <!-- Background Pattern -->
        <div class="absolute inset-0 opacity-5">
            <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, #00ff87 1px, transparent 0); background-size: 30px 30px;"></div>
        </div>
        
        <!-- Floating Elements -->
        <div class="absolute top-10 right-20 w-32 h-32 bg-accent/10 rounded-full blur-xl animate-pulse"></div>
        <div class="absolute bottom-20 left-10 w-48 h-48 bg-accent/5 rounded-full blur-2xl animate-pulse delay-1000"></div>
        
        <div class="max-w-4xl mx-auto px-6 py-16 relative z-10">
            <div class="text-center mb-12">                <h1 class="text-5xl md:text-6xl font-black tracking-tight leading-none mb-6">
                    Yeni <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent to-white">Albüm</span> Oluştur
                </h1>
                <p class="text-xl text-gray-300 max-w-2xl mx-auto leading-relaxed">
                    Şarkı koleksiyonunuzu dünyayla paylaşın
                </p>
            </div>
        </div>
    </div>

    <!-- Create Form Section -->
    <div class="max-w-4xl mx-auto px-6 pb-12 -mt-8 relative z-10">
        <div class="bg-white/5 backdrop-blur-sm rounded-2xl border border-white/10 p-8">
            <form asp-action="Create" method="post" enctype="multipart/form-data" class="space-y-8">
                <div asp-validation-summary="ModelOnly" class="text-red-400 bg-red-500/10 border border-red-500/20 rounded-lg p-4"></div>
                
                <!-- Album Cover Section -->
                <div class="space-y-6">
                    <h3 class="text-2xl font-bold text-white flex items-center space-x-3">
                        <div class="w-8 h-8 bg-gradient-to-br from-accent to-accent-dark rounded-lg flex items-center justify-center">
                            <i data-lucide="image" class="w-4 h-4 text-white"></i>
                        </div>                        <span>Albüm Kapağı</span>
                    </h3>
                    
                    <div class="grid md:grid-cols-2 gap-8">
                        <!-- Cover Image Preview -->
                        <div class="space-y-4">
                            <div id="cover-preview" class="aspect-square bg-gradient-to-br from-accent/20 to-black rounded-2xl border border-white/10 flex items-center justify-center relative overflow-hidden">
                                <div id="cover-placeholder" class="text-center">
                                    <i data-lucide="disc-3" class="w-16 h-16 text-accent mx-auto mb-4"></i>
                                    <p class="text-gray-400">Albüm kapağı önizlemesi</p>
                                </div>
                                <img id="cover-image" class="w-full h-full object-cover hidden" alt="Album cover">                                <button type="button" id="remove-cover" class="absolute top-4 right-4 w-8 h-8 bg-red-500/20 hover:bg-red-500/40 rounded-full items-center justify-center transition-colors duration-300 hidden">
                                    <i data-lucide="x" class="w-4 h-4 text-red-400"></i>
                                </button>
                            </div>
                        </div>
                        
                        <!-- Upload Options -->
                        <div class="space-y-6">
                            <!-- File Upload -->
                            <div>                                <label for="cover-upload" class="block text-sm font-medium text-gray-300 mb-3">Kapak Görseli Yükle</label>
                                <div class="relative">
                                    <input type="file" id="cover-upload" asp-for="CoverImage" accept="image/*" class="hidden">
                                    <label for="cover-upload" class="w-full bg-gradient-to-r from-accent/20 to-accent/10 hover:from-accent/30 hover:to-accent/20 border border-accent/30 rounded-lg px-6 py-4 text-center cursor-pointer transition-all duration-300 block">
                                        <i data-lucide="upload-cloud" class="w-6 h-6 text-accent mx-auto mb-2"></i>
                                        <span class="text-white font-medium">Görsel Dosyası Seçin</span>
                                        <p class="text-gray-400 text-sm mt-1">PNG, JPG, WEBP - maksimum 5MB</p>
                                    </label>
                                </div>
                                <span asp-validation-for="CoverImage" class="text-red-400 text-sm"></span>
                            </div>
                            
                            <!-- URL Option -->
                            <div class="relative">
                                <div class="absolute inset-0 flex items-center">
                                    <div class="w-full border-t border-white/10"></div>
                                </div>
                                <div class="relative flex justify-center text-sm">                                    <span class="px-4 bg-black text-gray-400">Veya</span>
                                </div>
                            </div>
                            
                            <div>
                                <label asp-for="CoverImageUrl" class="block text-sm font-medium text-gray-300 mb-3"></label>
                                <input asp-for="CoverImageUrl" class="w-full bg-black/50 border border-white/20 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition-all duration-300" placeholder="https://example.com/kapak.jpg">
                                <span asp-validation-for="CoverImageUrl" class="text-red-400 text-sm"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Album Information -->
                <div class="space-y-6">
                    <h3 class="text-2xl font-bold text-white flex items-center space-x-3">
                        <div class="w-8 h-8 bg-gradient-to-br from-accent to-accent-dark rounded-lg flex items-center justify-center">
                            <i data-lucide="info" class="w-4 h-4 text-white"></i>
                        </div>                        <span>Albüm Bilgileri</span>
                    </h3>
                    
                    <div class="grid md:grid-cols-2 gap-6">
                        <!-- Title -->
                        <div>
                            <label asp-for="Title" class="block text-sm font-medium text-gray-300 mb-3"></label>
                            <input asp-for="Title" class="w-full bg-black/50 border border-white/20 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition-all duration-300" placeholder="Albüm başlığını girin" required>
                            <span asp-validation-for="Title" class="text-red-400 text-sm"></span>
                        </div>
                        
                        <!-- Release Date -->
                        <div>
                            <label asp-for="ReleaseDate" class="block text-sm font-medium text-gray-300 mb-3"></label>
                            <input asp-for="ReleaseDate" type="date" class="w-full bg-black/50 border border-white/20 rounded-lg px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition-all duration-300" required>
                            <span asp-validation-for="ReleaseDate" class="text-red-400 text-sm"></span>
                        </div>
                        
                        <!-- Primary Genre -->
                        <div>
                            <label asp-for="PrimaryGenre" class="block text-sm font-medium text-gray-300 mb-3"></label>                            <select asp-for="PrimaryGenre" asp-items="Html.GetEnumSelectList<Eryth.Models.Enums.Genre>()" class="w-full bg-black/50 border border-white/20 rounded-lg px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition-all duration-300" required>
                                <option value="">Bir tür seçin</option>
                            </select>
                            <span asp-validation-for="PrimaryGenre" class="text-red-400 text-sm"></span>
                        </div>
                        
                        <!-- Record Label -->
                        <div>
                            <label asp-for="RecordLabel" class="block text-sm font-medium text-gray-300 mb-3"></label>
                            <input asp-for="RecordLabel" class="w-full bg-black/50 border border-white/20 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition-all duration-300" placeholder="Plak şirketi (isteğe bağlı)">
                            <span asp-validation-for="RecordLabel" class="text-red-400 text-sm"></span>
                        </div>
                        
                        <!-- Copyright -->
                        <div>
                            <label asp-for="Copyright" class="block text-sm font-medium text-gray-300 mb-3"></label>
                            <input asp-for="Copyright" class="w-full bg-black/50 border border-white/20 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition-all duration-300" placeholder="Telif bilgisi (isteğe bağlı)">
                            <span asp-validation-for="Copyright" class="text-red-400 text-sm"></span>
                        </div>
                        
                        <!-- Explicit Content -->
                        <div class="flex items-center space-x-3">
                            <input asp-for="IsExplicit" type="checkbox" class="w-5 h-5 bg-black/50 border-2 border-white/20 rounded focus:ring-2 focus:ring-accent text-accent">
                            <label asp-for="IsExplicit" class="text-sm font-medium text-gray-300">Müstehcen içerik içerir</label>
                        </div>
                    </div>
                    
                    <!-- Description -->
                    <div>
                        <label asp-for="Description" class="block text-sm font-medium text-gray-300 mb-3"></label>                        <textarea asp-for="Description" rows="4" class="w-full bg-black/50 border border-white/20 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition-all duration-300 resize-none" placeholder="Albümünüzü tanımlayın (isteğe bağlı)"></textarea>
                        <span asp-validation-for="Description" class="text-red-400 text-sm"></span>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex space-x-4 pt-6">
                    <a href="@Url.Action("Index", "Library")" class="flex-1 bg-white/10 hover:bg-white/20 text-white px-6 py-4 rounded-lg font-semibold text-center transition-all duration-300 hover:scale-105">
                        İptal
                    </a>
                    <button type="submit" class="flex-1 bg-gradient-to-r from-accent to-accent-dark hover:from-accent-dark hover:to-accent text-black px-6 py-4 rounded-lg font-semibold transition-all duration-300 hover:scale-105">
                        Albüm Oluştur
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Custom animations and styles */
    @@keyframes fade-in-up {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .animate-fade-in-up {
        animation: fade-in-up 0.8s ease-out forwards;
    }
    
    .delay-1000 { animation-delay: 1000ms; }
    
    /* Smooth scrolling */
    html {
        scroll-behavior: smooth;
    }
    
    /* Custom gradient text */
    .bg-clip-text {
        -webkit-background-clip: text;
        background-clip: text;
    }
    
    /* Custom checkbox styles */
    input[type="checkbox"]:checked {
        background-color: #00ff87;
        border-color: #00ff87;
        background-image: url("data:image/svg+xml,%3csvg viewBox='0 0 16 16' fill='black' xmlns='http://www.w3.org/2000/svg'%3e%3cpath d='m13.854 3.646-7.5 7.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6 10.293l7.146-7.147a.5.5 0 0 1 .708.708z'/%3e%3c/svg%3e");
    }
</style>

<script src="~/js/album/albumCreate.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
