@model IEnumerable<PlaylistViewModel>
@using Eryth.Models.Enums
@using Eryth.ViewModels
@{
    ViewData["Title"] = "Çalma Listelerim";
}

<style>
        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        
        .backdrop-blur-sm {
            backdrop-filter: blur(4px);
        }
        
        .bg-muted {
            background-color: #1a1a1a;
        }
        
        .border-muted {
            border-color: #333333;
        }
        
        .text-accent {
            color: #00ff87;
        }
        
        .bg-accent {
            background-color: #00ff87;
        }
        
        .hover\:bg-accent:hover {
            background-color: #00ff87;
        }
        
        .bg-accent\/10 {
            background-color: rgba(0, 255, 135, 0.1);
        }
        
        .bg-accent\/20 {
            background-color: rgba(0, 255, 135, 0.2);
        }
        
        .bg-accent\/5 {
            background-color: rgba(0, 255, 135, 0.05);
        }
        
        /* Dropdown Menu Fixes */
        .group:hover .dropdown-menu {
            visibility: visible;
            opacity: 1;
        }
        
        .dropdown-menu {
            position: absolute !important;
            z-index: 9999 !important;
        }
        
        /* Ensure card containers don't clip dropdowns */
        .playlist-card-container {
            position: relative;
            overflow: visible !important;
        }
        
        .text-accent\/60 {
            color: rgba(0, 255, 135, 0.6);
        }
        
        .hover\:shadow-accent\/30:hover {
            box-shadow: 0 0 30px rgba(0, 255, 135, 0.3);
        }
        
        .hover\:shadow-accent\/20:hover {
            box-shadow: 0 0 20px rgba(0, 255, 135, 0.2);
        }
        
        .hover\:shadow-accent\/10:hover {
            box-shadow: 0 0 20px rgba(0, 255, 135, 0.1);
        }
        
        .bg-gradient-to-r {
            background-image: linear-gradient(to right, var(--tw-gradient-stops));
        }
        
        .bg-gradient-to-br {
            background-image: linear-gradient(to bottom right, var(--tw-gradient-stops));
        }
        
        .bg-gradient-to-t {
            background-image: linear-gradient(to top, var(--tw-gradient-stops));
        }
        
        .from-accent {
            --tw-gradient-from: #00ff87;
            --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to, rgba(0, 255, 135, 0));
        }
        
        .to-white {
            --tw-gradient-to: #ffffff;
        }
        
        .from-black {
            --tw-gradient-from: #000000;
            --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to, rgba(0, 0, 0, 0));
        }
        
        .via-muted {
            --tw-gradient-stops: var(--tw-gradient-from), #1a1a1a, var(--tw-gradient-to, rgba(26, 26, 26, 0));
        }
        
        .to-black {
            --tw-gradient-to: #000000;
        }
        
        .from-muted {
            --tw-gradient-from: #1a1a1a;
            --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to, rgba(26, 26, 26, 0));
        }
        
        .bg-accent-dark {
            background-color: #00cc6a;
        }
        
        .from-accent-dark {
            --tw-gradient-from: #00cc6a;
            --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to, rgba(0, 204, 106, 0));
        }
        
        .to-accent-dark {
            --tw-gradient-to: #00cc6a;
        }
        
        .to-accent {
            --tw-gradient-to: #00ff87;
        }
        
        .hover\:from-accent-dark:hover {
            --tw-gradient-from: #00cc6a;
            --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to, rgba(0, 204, 106, 0));
        }
        
        .hover\:to-accent:hover {
            --tw-gradient-to: #00ff87;
        }
        
        .border-accent\/30 {
            border-color: rgba(0, 255, 135, 0.3);
        }
        
        .hover\:border-accent\/30:hover {
            border-color: rgba(0, 255, 135, 0.3);
        }
        
        .border-muted\/50 {
            border-color: rgba(51, 51, 51, 0.5);
        }
        
        .border-muted\/30 {
            border-color: rgba(51, 51, 51, 0.3);
        }
        
        .bg-black\/60 {
            background-color: rgba(0, 0, 0, 0.6);
        }
        
        .bg-black\/80 {
            background-color: rgba(0, 0, 0, 0.8);
        }
        
        .bg-black\/50 {
            background-color: rgba(0, 0, 0, 0.5);
        }
        
        .from-black\/80 {
            --tw-gradient-from: rgba(0, 0, 0, 0.8);
            --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to, rgba(0, 0, 0, 0));
        }
        
        .to-transparent {
            --tw-gradient-to: transparent;
        }
        
        @@keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
        
        .animate-pulse {
            animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }
        
        .delay-1000 {
            animation-delay: 1000ms;
        }
    </style>


<div class="min-h-screen bg-black text-white">
    <!-- Hero Section -->
    <div class="relative overflow-hidden to-black pt-12 pb-24">
        <!-- Background Pattern -->
        <div class="absolute inset-0 opacity-5">
            <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, #1DB954 1px, transparent 0); background-size: 30px 30px;"></div>
        </div>
        
        <!-- Floating Elements -->
        <div class="absolute top-10 right-20 w-32 h-32 bg-accent/10 rounded-full blur-xl animate-pulse"></div>
        <div class="absolute bottom-10 left-20 w-48 h-48 bg-accent/5 rounded-full blur-2xl animate-pulse delay-1000"></div>
        
        <div class="max-w-7xl mx-auto px-6 relative z-10">
            <div class="flex items-center justify-between flex-wrap gap-4">
                <div>
                    <h1 class="text-4xl md:text-5xl font-black tracking-tight leading-none mb-4">
                        <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent to-white">Çalma Listelerim</span>
                    </h1>
                    <p class="text-xl text-gray-300">
                        Kişisel müzik koleksiyonlarınızı yönetin
                    </p>
                </div>
                <div>
                    <a href="@Url.Action("Create", "Playlist")" 
                       class="group bg-gradient-to-r from-accent to-accent-dark hover:from-accent-dark hover:to-accent text-white px-8 py-4 rounded-xl font-semibold transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-accent/30 flex items-center whitespace-nowrap">
                        <i data-lucide="plus" class="w-5 h-5 mr-2 group-hover:rotate-90 transition-transform duration-300"></i>
                        Çalma Listesi Oluştur
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Section -->
    <div class="max-w-7xl mx-auto px-6 pb-20 -mt-8 relative z-10">
        @if (Model.Any())
        {
            <!-- Playlists Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-6 overflow-visible">
                @foreach (var playlist in Model)
                {
                    <div class="group bg-gradient-to-br from-muted to-black border border-muted/50 rounded-2xl hover:border-accent/30 transition-all duration-300 hover:transform hover:scale-105 hover:shadow-2xl hover:shadow-accent/10 relative">
                        <!-- Playlist Cover -->
                        <div class="relative aspect-square overflow-hidden rounded-t-2xl">
                            @if (!string.IsNullOrEmpty(playlist.CoverImageUrl))
                            {
                                <img src="@(playlist.CoverImageUrl?.StartsWith("/") == true ? playlist.CoverImageUrl : "/" + (playlist.CoverImageUrl ?? ""))" alt="@playlist.Name" 
                                     class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                            }
                            else
                            {
                                <div class="w-full h-full bg-gradient-to-br from-accent/20 to-black flex items-center justify-center">
                                    <i data-lucide="list-music" class="w-20 h-20 text-accent/60"></i>
                                </div>
                            }

                            <!-- Play Overlay -->
                            <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-all duration-300 flex items-center justify-center">
                                <button class="bg-accent hover:bg-accent-dark text-white p-4 rounded-full transition-all duration-200 transform scale-90 group-hover:scale-100 shadow-2xl" 
                                        onclick="playPlaylist('@playlist.Id')">
                                    <i data-lucide="play" class="w-8 h-8 ml-1"></i>
                                </button>
                            </div>

                            <!-- Privacy Badge -->
                            @if (playlist.Privacy == PlaylistPrivacy.Private)
                            {
                                <div class="absolute top-3 right-3 bg-black/80 text-white px-3 py-1 rounded-full text-xs font-medium backdrop-blur-sm">
                                    <i data-lucide="lock" class="w-3 h-3 inline mr-1"></i>Özel
                                </div>
                            }
                            else if (playlist.Privacy == PlaylistPrivacy.UnlistedLink)
                            {
                                <div class="absolute top-3 right-3 bg-black/80 text-white px-3 py-1 rounded-full text-xs font-medium backdrop-blur-sm">
                                    <i data-lucide="link" class="w-3 h-3 inline mr-1"></i>Listelenmemiş
                                </div>
                            }
                            
                            <!-- Gradient Overlay -->
                            <div class="absolute bottom-0 left-0 right-0 h-1/3 bg-gradient-to-t from-black/80 to-transparent"></div>
                        </div>

                        <!-- Playlist Info -->
                        <div class="p-6">
                            <h3 class="text-white font-bold mb-2 truncate text-lg group-hover:text-accent transition-colors duration-300">
                                <a href="@Url.Action("Details", "Playlist", new { id = playlist.Id })">
                                    @playlist.Name
                                </a>
                            </h3>
                            
                            @if (!string.IsNullOrEmpty(playlist.Description))
                            {
                                <p class="text-gray-400 text-sm mb-4 line-clamp-2 leading-relaxed">@playlist.Description</p>
                            }
                            
                            <!-- Stats -->
                            <div class="flex items-center justify-between text-sm mb-4">
                                <div class="flex items-center space-x-1 text-gray-400">
                                    <i data-lucide="music" class="w-4 h-4 text-accent"></i>
                                    <span class="text-white font-semibold">@playlist.TrackCount</span>
                                    <span>şarkı</span>
                                </div>
                                <span class="text-gray-500">@playlist.FormattedDuration</span>
                            </div>
                            
                            <div class="flex items-center justify-between text-sm mb-4">
                                <div class="flex items-center space-x-1 text-gray-400">
                                    <i data-lucide="heart" class="w-4 h-4 text-accent"></i>
                                    <span class="text-white font-semibold">@playlist.LikeCount</span>
                                    <span>beğeni</span>
                                </div>
                                <span class="text-gray-500 text-xs">@playlist.RelativeUpdatedDate</span>
                            </div>

                            <!-- Actions -->
                            <div class="flex items-center justify-between pt-4 border-t border-muted/30">
                                <div class="flex items-center space-x-2">
                                    <!-- Edit Button -->
                                    <a href="@Url.Action("Edit", "Playlist", new { id = playlist.Id })" 
                                       class="text-gray-400 hover:text-accent transition-colors duration-200 p-2 rounded-lg hover:bg-black/50" title="Düzenle">
                                        <i data-lucide="edit" class="w-4 h-4"></i>
                                    </a>

                                    <!-- Share Button -->
                                    <button class="text-gray-400 hover:text-accent transition-colors duration-200 p-2 rounded-lg hover:bg-black/50" 
                                            onclick="sharePlaylist('@playlist.Id', '@playlist.Name')" title="Paylaş">
                                        <i data-lucide="share" class="w-4 h-4"></i>
                                    </button>
                                </div>

                                <!-- More Options -->
                                <div class="relative z-50">
                                    <button class="text-gray-400 hover:text-white transition-colors duration-200 p-2 rounded-lg hover:bg-black/50" 
                                            onclick="toggleDropdown('playlist-menu-@playlist.Id')" title="Diğer seçenekler">
                                        <i data-lucide="more-horizontal" class="w-4 h-4"></i>
                                    </button>
                                    <div id="playlist-menu-@playlist.Id" 
                                         class="absolute right-0 top-full mt-2 w-48 bg-gray-900 rounded-xl shadow-2xl border border-gray-700 py-2 z-[100] hidden dropdown-menu"
                                         style="background: linear-gradient(135deg, #1a1a1a 0%, #000000 100%); backdrop-filter: blur(10px); box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.5), 0 10px 10px -5px rgba(0, 0, 0, 0.3);">
                                        <a href="@Url.Action("Details", "Playlist", new { id = playlist.Id })" 
                                           class="px-4 py-3 text-white hover:bg-gray-800 hover:text-green-400 transition-all duration-200 flex items-center">
                                            <i data-lucide="external-link" class="w-4 h-4 mr-3"></i>Çalma Listesini Görüntüle
                                        </a>
                                        <a href="@Url.Action("Edit", "Playlist", new { id = playlist.Id })" 
                                           class="px-4 py-3 text-white hover:bg-gray-800 hover:text-green-400 transition-all duration-200 flex items-center">
                                            <i data-lucide="edit" class="w-4 h-4 mr-3"></i>Çalma Listesi Düzenle
                                        </a>
                                        <button class="w-full text-left px-4 py-3 text-white hover:bg-gray-800 hover:text-green-400 transition-all duration-200 flex items-center" 
                                                onclick="duplicatePlaylist('@playlist.Id')">
                                            <i data-lucide="copy" class="w-4 h-4 mr-3"></i>Kopyala
                                        </button>
                                        <hr class="border-gray-700 my-1">
                                        <button class="w-full text-left px-4 py-3 text-red-400 hover:bg-gray-800 hover:text-red-300 transition-all duration-200 flex items-center" 
                                                onclick="deletePlaylist('@playlist.Id', '@playlist.Name')">
                                            <i data-lucide="trash" class="w-4 h-4 mr-3"></i>Sil
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (ViewBag.HasNextPage == true || ViewBag.CurrentPage > 1)
            {
                <div class="flex justify-center mt-16 space-x-6">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <a href="@Url.Action("MyPlaylists", "Playlist", new { page = ViewBag.CurrentPage - 1 })" 
                           class="group bg-gradient-to-r from-muted to-black border border-muted/50 hover:border-accent/30 text-white px-8 py-4 rounded-xl transition-all duration-300 hover:transform hover:scale-105 flex items-center space-x-3 shadow-lg hover:shadow-accent/20">
                            <i data-lucide="chevron-left" class="w-5 h-5 group-hover:text-accent transition-colors duration-300"></i>
                            <span class="font-semibold">Önceki</span>
                        </a>
                    }
                    @if (ViewBag.HasNextPage == true)
                    {
                        <a href="@Url.Action("MyPlaylists", "Playlist", new { page = ViewBag.CurrentPage + 1 })" 
                           class="group bg-gradient-to-r from-accent to-accent-dark hover:from-accent-dark hover:to-accent text-white px-8 py-4 rounded-xl transition-all duration-300 hover:transform hover:scale-105 flex items-center space-x-3 shadow-lg hover:shadow-accent/30">
                            <span class="font-semibold">Sonraki</span>
                            <i data-lucide="chevron-right" class="w-5 h-5"></i>
                        </a>
                    }
                </div>
            }
        }
        else
        {
            <!-- Empty State -->
            <div class="text-center py-20">
                <div class="w-32 h-32 bg-gradient-to-br from-accent/20 to-black rounded-3xl mx-auto mb-8 flex items-center justify-center">
                    <i data-lucide="list-music" class="w-16 h-16 text-accent"></i>
                </div>
                <h3 class="text-3xl font-bold text-white mb-4">Henüz çalma listesi yok</h3>
                <p class="text-gray-400 mb-8 text-lg max-w-md mx-auto">Favori şarkılarınızı düzenlemek ve yeni müzikler keşfetmek için ilk çalma listenizi oluşturun</p>
                <a href="@Url.Action("Create", "Playlist")" 
                   class="bg-gradient-to-r from-accent to-accent-dark hover:from-accent-dark hover:to-accent text-white px-8 py-4 rounded-xl font-semibold transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-accent/30 inline-flex items-center">
                    <i data-lucide="plus" class="w-5 h-5 mr-2"></i>
                    İlk Çalma Listenizi Oluşturun
                </a>
            </div>
        }

<script src="~/js/playlist/myPlaylists.js"></script>