@model Eryth.ViewModels.LikeButtonViewModel

@{
    var buttonClass = "js-like-toggle flex items-center space-x-1 transition-all duration-200 " + (Model.ButtonClass ?? "text-gray-400 hover:text-red-500");
    var isLiked = Model.IsLiked;
    var iconClass = "js-like-icon w-4 h-4 " + (isLiked ? "text-red-500 fill-current" : "text-gray-400");
}

<button class="@buttonClass @(isLiked ? "is-liked" : "")" 
        data-track-id="@Model.TrackId"        title="@(isLiked ? "Beğeniyi kaldır" : "Beğen")"
        aria-label="@(isLiked ? "Beğeniyi kaldır" : "Beğen")">
    <i data-lucide="heart" class="@iconClass"></i>
    @if (Model.ShowCount)
    {
        <span class="js-like-count text-xs">@Model.LikeCount</span>
    }
</button>
